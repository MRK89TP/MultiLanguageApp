<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <SolidColorBrush x:Key="AppBackground">#1e2124</SolidColorBrush>

    <LinearGradientBrush x:Key="PanelBackground" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#f6efe3" Offset="0" />
        <GradientStop Color="#f9f4ed" Offset="0.25" />
        <GradientStop Color="#fdfbf8" Offset="0.5"/>
        <GradientStop Color="#f9f4ed" Offset="0.75" />
        <GradientStop Color="#f6efe3" Offset="1" />
    </LinearGradientBrush>


    <Style x:Key="Font1" TargetType="{x:Type Control}">
        <Setter Property="FontStyle" Value="Normal"/>
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="#DFE4E8" />
    </Style>

    <Style x:Key="Font2" TargetType="{x:Type Control}">
        <Setter Property="FontStyle" Value="Normal"/>
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="#252525" />
    </Style>

</ResourceDictionary>