<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="AppBackground">#DFE4E8</SolidColorBrush>

    <LinearGradientBrush x:Key="PanelBackground" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#1e2124" Offset="0" />
        <GradientStop Color="#282b30" Offset="0.25" />
        <GradientStop Color="#424549" Offset="0.5"/>
        <GradientStop Color="#282b30" Offset="0.75" />
        <GradientStop Color="#1e2124" Offset="1" />
    </LinearGradientBrush>

    <Style x:Key="Font1" TargetType="{x:Type Control}">
        <Setter Property="FontStyle" Value="Normal"/>
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="#252525" />
    </Style>

    <Style x:Key="Font2" TargetType="{x:Type Control}">
        <Setter Property="FontStyle" Value="Normal"/>
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="#DFE4E8" />
    </Style>


</ResourceDictionary>